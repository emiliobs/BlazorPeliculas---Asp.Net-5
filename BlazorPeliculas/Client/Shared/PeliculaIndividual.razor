<div>
    <div>
        <p>Título: <b>@(Pelicula.Titulo)</b></p>
        <p>Lanzamiento: <b>@Pelicula.Lanzamiento.ToString("dd MMM yyyy")</b></p>
        @if (MostrarBotones)
        {

            <div>
                <button @onclick="@(() => EliminarPelicula.InvokeAsync(Pelicula))" class="btn btn-danger">Borrar</button>
            </div>
        }
    </div>
</div>

@code {

    [Parameter]
    public Pelicula Pelicula { get; set; }
    [Parameter]
    public bool MostrarBotones { get; set; } = false;
    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; }

    

}
