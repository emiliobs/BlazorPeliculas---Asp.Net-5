@page "/counter"
@inject ServiciosSingleton ServiciosSingleton
@inject ServiciosTransient ServiciosTransient

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Singleton count: @ServiciosSingleton.Valor</p>
<p>Transient count: @ServiciosTransient.Valor</p>



<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<ListadoPeliculas></ListadoPeliculas>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        ServiciosSingleton.Valor = currentCount;
        ServiciosTransient.Valor = currentCount;
    }
}
